<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sushil.androidmaterialtest.LoginActivity">

    <include
        android:id="@+id/app_loginbar"
        layout="@layout/app_loginbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_loginbar"
        android:background="@drawable/log"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/handleaf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:background="#a230"
                    android:padding="3dp"
                    android:text="पात विश्लेषण"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:background="#a230"
                    android:padding="3dp"
                    android:text="व्यक्तिगत जानकारी"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>